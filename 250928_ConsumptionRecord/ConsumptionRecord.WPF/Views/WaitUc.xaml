<UserControl
  x:Class="ConsumptionRecord.WPF.Views.WaitUc"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ConsumptionRecord.WPF.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:vm="clr-namespace:ConsumptionRecord.WPF.ViewModels"
  d:DataContext="{d:DesignInstance Type=vm:WaitUcViewModel}"
  d:DesignHeight="300"
  d:DesignWidth="500"
  prism:ViewModelLocator.AutoWireViewModel="True"
  mc:Ignorable="d"
>
  <ui:DialogHost>
    <ui:DrawerHost IsRightDrawerOpen="{Binding IsShowAddWait}">
      <ui:DrawerHost.RightDrawerContent>
        <Grid Margin="16">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
          </Grid.RowDefinitions>
          <TextBlock FontSize="16" FontWeight="Bold" Grid.Row="0" Text="添加待办事项"></TextBlock>
          <StackPanel Margin="0,24,0,0" Grid.Row="1" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="状态: "></TextBlock>
            <ComboBox Margin="8,0" SelectedIndex="0">
              <ComboBoxItem Content="待办" />
              <ComboBoxItem Content="已完成" />
            </ComboBox>
          </StackPanel>
          <TextBox Margin="0,8" Grid.Row="2" ui:HintAssist.Hint="输入标题"></TextBox>
          <TextBox
            Width="280"
            Grid.Row="3"
            VerticalContentAlignment="Top"
            TextWrapping="Wrap"
            ui:HintAssist.Hint="输入内容"
          ></TextBox>
          <Button Margin="0,8,0,0" Grid.Row="4" Content="保存" />
        </Grid>
      </ui:DrawerHost.RightDrawerContent>
      <Grid Margin="8">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!--  ROW1  -->
        <Grid Grid.Row="0" Margin="16,4">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
          </Grid.ColumnDefinitions>
          <TextBox
            Grid.Column="0"
            VerticalAlignment="Center"
            ui:HintAssist.Hint="搜索"
            ui:TextFieldAssist.HasClearButton="True"
          />
          <StackPanel Grid.Column="1" Orientation="Horizontal">
            <TextBlock Margin="16,0" VerticalAlignment="Center" Text="筛选" />
            <ComboBox SelectedIndex="0">
              <ComboBoxItem Content="全部" />
              <ComboBoxItem Content="待办" />
              <ComboBoxItem Content="已完成" />
            </ComboBox>
          </StackPanel>
          <Button
            Grid.Column="2"
            Command="{Binding ShowAddWaitCommand}"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="+ 添加待办"
          />
        </Grid>
        <!--  ROW2  -->
        <ScrollViewer
          VerticalScrollBarVisibility="Hidden"
          HorizontalScrollBarVisibility="Disabled"
          Grid.Row="1"
        >
          <ItemsControl ItemsSource="{Binding WaitInfos}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Grid MinWidth="220" Height="180" MaxWidth="250" Margin="8">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                  </Grid.RowDefinitions>
                  <Border
                    CornerRadius="16,16,0,16"
                    Grid.Row="0"
                    Background="#257e33"
                    Grid.RowSpan="2"
                  ></Border>
                  <ui:PopupBox
                    Grid.Row="0"
                    Margin="8"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="1"
                  ></ui:PopupBox>
                  <TextBlock
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Margin="16,8"
                    FontWeight="Bold"
                    Text="{Binding Title}"
                  />
                  <TextBlock Grid.Row="1" Margin="16,2" Text="{Binding Content}" />
                  <Canvas Grid.Row="0" Grid.RowSpan="2" ClipToBounds="True">
                    <Ellipse
                      Canvas.Top="10"
                      Canvas.Right="-50"
                      Width="120"
                      Height="120"
                      Fill="White"
                      Opacity="0.1"
                    />
                    <Ellipse
                      Canvas.Top="80"
                      Canvas.Right="-30"
                      Width="120"
                      Height="120"
                      Fill="White"
                      Opacity="0.1"
                    />
                  </Canvas>
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </Grid>
    </ui:DrawerHost>
  </ui:DialogHost>
</UserControl>
