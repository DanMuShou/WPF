<UserControl
  x:Class="ConsumptionRecord.WPF.Views.WaitUc"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:vm="clr-namespace:ConsumptionRecord.WPF.ViewModels"
  xmlns:cov="clr-namespace:ConsumptionRecord.WPF.Converter"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  d:DataContext="{d:DesignInstance Type=vm:WaitUcViewModel}"
  d:DesignHeight="300"
  d:DesignWidth="500"
  prism:ViewModelLocator.AutoWireViewModel="True"
  mc:Ignorable="d"
>
  <UserControl.Resources>
    <cov:ColorConverter x:Key="ColorConverter"></cov:ColorConverter>
  </UserControl.Resources>
  <ui:DialogHost>
    <ui:DrawerHost IsRightDrawerOpen="{Binding IsShowAddWait}">
      <ui:DrawerHost.RightDrawerContent>
        <Grid Width="280" Margin="16">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold" Text="添加待办事项" />
          <StackPanel Grid.Row="1" Margin="0,24,0,0" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="状态: " />
            <ComboBox Margin="8,0" SelectedIndex="0">
              <ComboBoxItem Content="待办" />
              <ComboBoxItem Content="已完成" />
            </ComboBox>
          </StackPanel>
          <TextBox Grid.Row="2" Margin="0,8" ui:HintAssist.Hint="输入标题" />
          <TextBox
            Grid.Row="3"
            VerticalContentAlignment="Top"
            ui:HintAssist.Hint="输入内容"
            TextWrapping="Wrap"
          />
          <Button Grid.Row="4" Margin="0,8,0,0" Content="保存" />
        </Grid>
      </ui:DrawerHost.RightDrawerContent>
      <Grid Margin="8">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!--  ROW1  -->
        <Grid Grid.Row="0" Margin="16,4">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
          </Grid.ColumnDefinitions>
          <TextBox
            Grid.Column="0"
            VerticalAlignment="Center"
            ui:HintAssist.Hint="搜索 enter查询"
            ui:TextFieldAssist.HasClearButton="True"
            Text="{Binding SelectQueryStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          >
            <TextBox.InputBindings>
              <KeyBinding Key="Enter" Command="{Binding QueryWaitListCommand}" />
            </TextBox.InputBindings>
          </TextBox>
          <StackPanel Grid.Column="1" Orientation="Horizontal">
            <TextBlock Margin="16,0" VerticalAlignment="Center" Text="筛选" />
            <ComboBox SelectedIndex="{Binding SelectModeIndex}">
              <b:Interaction.Triggers>
                <b:EventTrigger EventName="SelectionChanged">
                  <prism:InvokeCommandAction
                    Command="{Binding QueryWaitListCommand}"
                  ></prism:InvokeCommandAction>
                </b:EventTrigger>
              </b:Interaction.Triggers>
              <ComboBoxItem Content="全部" />
              <ComboBoxItem Content="待办" />
              <ComboBoxItem Content="已完成" />
            </ComboBox>
          </StackPanel>
          <Button
            Grid.Column="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Command="{Binding ShowAddWaitCommand}"
            Content="+ 添加待办"
          />
        </Grid>
        <!--  ROW2  -->
        <ScrollViewer
          Grid.Row="1"
          HorizontalScrollBarVisibility="Disabled"
          VerticalScrollBarVisibility="Hidden"
        >
          <ItemsControl ItemsSource="{Binding WaitInfos}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Grid Height="180" MinWidth="220" MaxWidth="250" Margin="8">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                  </Grid.RowDefinitions>
                  <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Background="{Binding IsDone,Converter={StaticResource ColorConverter}, ConverterParameter=White}"
                    CornerRadius="16,16,0,16"
                  />
                  <ui:PopupBox
                    Grid.Row="0"
                    Margin="8"
                    HorizontalAlignment="Right"
                    Panel.ZIndex="1"
                  />
                  <TextBlock
                    Grid.Row="0"
                    Margin="16,8"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="{Binding Title}"
                  />
                  <TextBlock Grid.Row="1" Margin="16,2" Text="{Binding Content}" />
                  <Canvas Grid.Row="0" Grid.RowSpan="2" ClipToBounds="True">
                    <Ellipse
                      Canvas.Top="10"
                      Canvas.Right="-50"
                      Width="120"
                      Height="120"
                      Fill="White"
                      Opacity="0.1"
                    />
                    <Ellipse
                      Canvas.Top="80"
                      Canvas.Right="-30"
                      Width="120"
                      Height="120"
                      Fill="White"
                      Opacity="0.1"
                    />
                  </Canvas>
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </Grid>
    </ui:DrawerHost>
  </ui:DialogHost>
</UserControl>
