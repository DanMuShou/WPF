<Window
    x:Class="Chapter05.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter05"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <!-- <ResourceDictionary x:Name="Resource01" Source="Resources/MyLangage.xaml" /> -->
        <FontFamily x:Key="ff">wodewenzi</FontFamily>
    </Window.Resources>

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Click="Btn0001OnClick" Content="Open The Window" />
            <Button Click="Btn0002Click" Content="Close Window" />
            <Button Click="Btn0003Click" Content="Close Application" />
            <Button Click="Btn0004Click" Content="Open Thread" />
            <Button Click="Btn0005Click" Content="Environment Exit" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <Image x:Name="Image0101" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2">
            <Button Height="20" Style="{StaticResource My}" />
        </StackPanel>

        <!--  一个中文资源, 一个英文资源  -->
        <!--  1. 定义资源  -->
        <!--  2. 给空间加上Uid  -->
        <!--  2. 应用资源  -->

        <StackPanel Grid.Row="0" Grid.Column="3">
            <TextBlock Text="{DynamicResource str}" />
            <Button Click="Btn0301OnClick" Content="{DynamicResource strChange}" />
        </StackPanel>

        <!--  1. OneWay 源改变目标改变  -->
        <!--  2. TwoWay 双向改变  -->
        <!--  3. OneTime 一次改变 源再变 目标不变  -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Image
                x:Name="Image1001"
                Height="90"
                Opacity="{Binding ElementName=Slider1001, Path=Value, Mode=TwoWay}"
                Source="Image/精灵-0001.png" />
            <Slider
                x:Name="Slider1001"
                Maximum="1"
                Minimum="0"
                Value="0.5" />
            <Button Click="Btn1001OnClick" Content="改变图片透明度" />
            <Button Click="Btn10011OnClick" Content="改变Slider" />
            <TextBox Text="{Binding ElementName=Slider1001, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=5000}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Background="DarkCyan">
            <TextBox
                Width="40 "
                Height="20"
                Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}, Path=Background}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            DataContext="王小明实体">
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text="{Binding Age}" />
            <TextBlock Text="{Binding Source={x:Static SystemFonts.IconFontFamily}, Path=Source}" />
            <TextBlock Text="{Binding Source={StaticResource ff}, Path=Source}" />

        </StackPanel>

        <!--  relativeSource 上一级元素, 控件样式  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="3"
            Background="DarkOliveGreen">
            <TextBlock Background="Brown" />
            <TextBlock Background="{Binding Path=Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" />
            <TextBlock Background="AntiqueWhite" Text="{Binding Path=Background, RelativeSource={RelativeSource Mode=Self}}" />

        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            DataContext="{x:Static SystemFonts.IconFontFamily}">
            <TextBlock Text="{Binding Source}" />
            <TextBlock Text="{Binding LineSpacing}" />
            <TextBlock Text="{Binding Baseline}" />
            <TextBlock Text="{Binding FamilyNames}" />
        </StackPanel>

        <StackPanel
            x:Name="StackPanel2101"
            Grid.Row="2"
            Grid.Column="1">
            <TextBlock Text="{Binding}" />
            <TextBlock Text="{Binding Age}" />
        </StackPanel>
    </Grid>
</Window>
