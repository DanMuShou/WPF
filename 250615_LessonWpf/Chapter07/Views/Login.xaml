<Window
    x:Class="Chapter07.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Chapter07.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter07.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Background="CadetBlue">
            <TextBlock
                Margin="0,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="20"
                Text="登录界面"
                TextAlignment="Center" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Background="DarkCyan">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Resources/Images/imfo.png" />
        </Border>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Margin="0,10" Orientation="Horizontal">
                <Label Content="账号 : " />
                <TextBox
                    Width="200"
                    Margin="5,0"
                    VerticalContentAlignment="Center"
                    MaxLength="30"
                    Text="{Binding Account, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Margin="0,10" Orientation="Horizontal">
                <Label Content="密码 : " />
                <PasswordBox
                    Width="200"
                    Margin="5,0"
                    VerticalContentAlignment="Center"
                    common:PasswordHelper.IsOpen="True"
                    common:PasswordHelper.Password="{Binding Password, Mode=TwoWay}"
                    MaxLength="30" />
            </StackPanel>
            <Button
                Width="110"
                Height="30"
                Margin="0,10"
                Command="{Binding LoginCmd}"
                Content="登录" />
        </StackPanel>


    </Grid>
</Window>
