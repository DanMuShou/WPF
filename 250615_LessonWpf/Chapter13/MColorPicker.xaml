<UserControl
    x:Class="Chapter13.MColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter13"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Slider
                x:Name="SliderColorR"
                Margin="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=Padding}"
                Maximum="255"
                Minimum="0"
                Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=ColorR}" />
            <Slider
                x:Name="SliderColorG"
                Margin="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=Padding}"
                Maximum="255"
                Minimum="0"
                Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=ColorG}" />
            <Slider
                x:Name="SliderColorB"
                Margin="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=Padding}"
                Maximum="255"
                Minimum="0"
                Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=ColorB}" />
        </StackPanel>
        <Border
            Grid.Column="1"
            Height="auto"
            BorderBrush="Black"
            BorderThickness="3">
            <Rectangle
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                StrokeThickness="3">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MColorPicker}, Path=Color}" />
                </Rectangle.Fill>
            </Rectangle>
        </Border>
    </Grid>
</UserControl>
