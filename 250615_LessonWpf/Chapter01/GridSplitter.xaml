<Window
    x:Class="Chapter01.GridSplitter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GridSplitter"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Background="Cyan"
            FontSize="20"
            Foreground="Red"
            TextWrapping="Wrap">
            text01text01text01text01text01text01text01text01text01text01s
        </TextBlock>

        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Black"
            ShowsPreview="True" />

        <TextBlock
            Grid.Column="2"
            Background="Cyan"
            FontSize="20"
            Foreground="Red"
            TextWrapping="Wrap">
            text01text01text01text01text01text01text01text01text01text01s
        </TextBlock>


    </Grid>
</Window>
