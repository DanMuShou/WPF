<Window
    x:Class="Chapter01.MyStackPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StackPanel"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="300"
            Height="60"
            Orientation="Horizontal">
            <!--  Margin 外边距. 一个数-上下左右 两个数-上下左右 四个数-左上右下  -->
            <Button
                Width="50"
                Height="20"
                Margin="20,10,15,30"
                Content="Btn01" />
            <Button
                Width="50"
                Height="20"
                Content="Btn02" />

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Text01" />
        </StackPanel>

        <!--  BorderThickness 和 Margin 设置格式相同:左上右下  -->

        <Border
            Width="300"
            Height="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Blue"
            BorderThickness="10,10,10,0"
            CornerRadius="10">
            <Grid>
                <Button
                    Width="60"
                    Height="30"
                    Content="Btn01" />
            </Grid>
        </Border>
    </Grid>
</Window>
