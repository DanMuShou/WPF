<Window
    x:Class="Chapter03.MyStudyMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter03"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MyStudyMainWindow"
    Width="800"
    Height="450"
    FontFamily="Maple Mono NF CN Medium"
    FontSize="10"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label
                Width="100"
                Height="30"
                AllowDrop="True"
                Background="Bisque"
                Content="拖放"
                Drop="LabelOnDrop" />

            <TextBox
                Width="100"
                Height="30"
                Background="Aqua"
                Text="这是一段文字" />

            <Label
                Width="100"
                Height="30"
                Background="Aquamarine"
                Content="这是一段文字"
                MouseDown="LabelOnMouseDown" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBox
                x:Name="Text01"
                KeyDown="TextBoxOnKeyDown"
                KeyUp="TextBoxOnKeyDown"
                PreviewTextInput="TextBoxOnPreTextInput" />
            <TextBox />
            <Border
                Width="70"
                Height="70"
                Background="Black" />
            <Button Click="BtnOnClick" Content="btn01" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Text02" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="3">
            <!--  元素绑定  -->
            <Label Content="_Name:" Target="{Binding ElementName=TextBox03Name}" />
            <TextBox x:Name="TextBox03Name" />
            <Label Content="_Age:" Target="{Binding ElementName=TextBox03Age}" />
            <TextBox x:Name="TextBox03Age" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button
                Click="Btn13OnClick"
                IsCancel="True"
                IsDefault="True">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="80"
                        Height="40"
                        Source="Image/精灵-0001.png" />
                    <Label Content="这是一个按钮" />
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Height="30" Content="Btn11" />
            <CheckBox Height="30" Content="Btn11_1" />
            <RadioButton Height="30" Content="btn11_2" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label x:Name="Label12" Content="info" />
            <Button Click="Buton12OnClick" Content="获取所有选项" />
            <!--  List 列表控件  -->
            <!--  单击任意一项 选择最后一项  -->
            <ListBox x:Name="ListBox12" CheckBox.Click="ListBox12OnClick">
                <CheckBox Height="30" Content="Btn1201" />
                <CheckBox Height="30" Content="Btn1202" />
                <CheckBox Height="30" Content="Btn1203" />
                <CheckBox Height="30" Content="Btn1204" />
                <CheckBox Height="30" Content="Btn1205" />
                <CheckBox Height="30" Content="Btn1206" />
                <CheckBox Height="30" Content="Btn1207" />
            </ListBox>
        </StackPanel>

        <!--  在同一级互斥  -->
        <!--  GroupName优先级最高  -->
        <StackPanel Grid.Row="1" Grid.Column="3">
            <StackPanel x:Name="StackPanel1301">
                <RadioButton
                    Content="RadioBtn1201"
                    GroupName="Group01"
                    Indeterminate="RadioBtn13OnIndeter"
                    IsChecked="{x:Null}" />
                <RadioButton
                    Content="RadioBtn1202"
                    GroupName="Group01"
                    IsChecked="True" />
                <RadioButton Content="RadioBtn1203" GroupName="Group01" />
            </StackPanel>
            <StackPanel Margin="0,20,0,0" RadioButton.Click="RadioBtn12OnClick">
                <RadioButton Content="RadioBtn1204" GroupName="Group02" />
                <RadioButton Content="RadioBtn1205" GroupName="Group02" />
            </StackPanel>
            <Button Click="Btn1301OnClick" Content="Btn1301" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Button
                Content="Btn2001"
                ToolTip="我吃"
                ToolTipService.InitialShowDelay="1000"
                ToolTipService.ShowDuration="5000" />
            <Button Content="Get Image">
                <Button.ToolTip>
                    <ToolTip HasDropShadow="True" Placement="Bottom">
                        <Image Source="Image/精灵-0001.png" />
                    </ToolTip>

                </Button.ToolTip>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBlock x:Name="TextBlock21" TextWrapping="Wrap">
                "复活吧"<Run
                    x:Name="Run21"
                    Background="Crimson"
                    FontSize="20"
                    MouseEnter="Run21OnMouseEnter"
                    Text="我-的-爱-人"
                    TextDecorations="UnderLine" />
                <Run Background="DarkOrchid" Text="!!!!!" />
            </TextBlock>
            <!--  AllowsTransparency 允许透明  -->
            <!--  PopupAnimation 弹出动画 允许动画 AllowsTransparency 必须为true  -->
            <Popup
                x:Name="Popup21"
                Height="100"
                AllowsTransparency="True"
                Placement="Mouse"
                PlacementTarget="{Binding ElementName=TextBlock21}"
                PopupAnimation="Slide"
                StaysOpen="False">
                <StackPanel>
                    <Border
                        Width="100"
                        Height="20"
                        Background="DarkSlateGray"
                        BorderBrush="DodgerBlue"
                        BorderThickness="2">
                        <TextBlock>
                            复活<Hyperlink Click="Link21OnClick" NavigateUri="https://www.bilibili.com/video/BV13L1BYjE5v?p=39">this</Hyperlink>
                        </TextBlock>
                    </Border>
                    <Label Background="Aqua">1</Label>
                </StackPanel>
            </Popup>


        </StackPanel>

        <ScrollViewer
            Grid.Row="2"
            Grid.Column="2"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal">
                <Button Margin="0,10" Content="Btn2201" />
                <Button Margin="0,10" Content="Btn2202" />
                <Button Margin="0,10" Content="Btn2203" />
                <Button Margin="0,10" Content="Btn2204" />
                <Button Margin="0,10" Content="Btn2205" />
                <Button Margin="0,10" Content="Btn2206" />
                <Button Margin="0,10" Content="Btn2207" />
                <Button Margin="0,10" Content="Btn2208" />
                <Button Margin="0,10" Content="Btn2209" />
                <Button Margin="0,10" Content="Btn2210" />
                <Button Margin="0,10" Content="Btn2211" />
            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Grid.Column="3">
            <Button
                Click="Btn23OnClick"
                Content="LastItem"
                DockPanel.Dock="Left" />

            <Button
                Click="Btn2301OnClick"
                Content="NextItem"
                DockPanel.Dock="Right" />

            <Button
                Click="Btn2302OnClick"
                Content="LastPage"
                DockPanel.Dock="Top" />

            <Button
                Click="Btn2303OnClick"
                Content="NextPage"
                DockPanel.Dock="Bottom" />
            <ScrollViewer x:Name="ScrollViewer23">
                <StackPanel Orientation="Vertical">
                    <Button Margin="0,10" Content="Btn2201" />
                    <Button Margin="0,10" Content="Btn2202" />
                    <Button Margin="0,10" Content="Btn2203" />
                    <Button Margin="0,10" Content="Btn2204" />
                    <Button Margin="0,10" Content="Btn2205" />
                    <Button Margin="0,10" Content="Btn2206" />
                    <Button Margin="0,10" Content="Btn2207" />
                    <Button Margin="0,10" Content="Btn2208" />
                    <Button Margin="0,10" Content="Btn2209" />
                    <Button Margin="0,10" Content="Btn2210" />
                    <Button Margin="0,10" Content="Btn2211" />
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
