<Window
    x:Class="Chapter10.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="AnimationBtn" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="40" />
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <TransformGroup>
                        <RotateTransform />
                        <ScaleTransform />
                    </TransformGroup>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                RepeatBehavior="Forever"
                                Storyboard.TargetProperty="LayoutTransform.Children[0].Angle"
                                To="360" />

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.Children[0].Angle" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>

        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnStartPlay">
            <BeginStoryboard x:Name="StartPlay">
                <Storyboard x:Name="Storyboard" CurrentTimeInvalidated="TimeLine_OnCurrentTimeInvalidated">
                    <DoubleAnimation
                        SpeedRatio="{Binding ElementName=SpeedSlider, Path=Value}"
                        Storyboard.TargetName="Bg"
                        Storyboard.TargetProperty="Opacity"
                        From="1"
                        To="0"
                        Duration="0:0:10" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnPausePlay">
            <PauseStoryboard BeginStoryboardName="StartPlay" />
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="ReStartPlay">
            <ResumeStoryboard BeginStoryboardName="StartPlay" />
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnStopPlay">
            <StopStoryboard BeginStoryboardName="StartPlay" />
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="BtnCenterPlay">
            <SeekStoryboard BeginStoryboardName="StartPlay" Offset="0:0:5" />
        </EventTrigger>

    </Window.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Image
                RenderOptions.BitmapScalingMode="HighQuality"
                SnapsToDevicePixels="True"
                Source="精灵-0001.png"
                Stretch="None"
                UseLayoutRounding="True" />
            <Button Height="20">
                <Button.Effect>
                    <BlurEffect KernelType="Gaussian" Radius="10" />
                </Button.Effect>
            </Button>
            <TextBlock Margin="3" Text="11111">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="9"
                        Direction="315"
                        ShadowDepth="20"
                        Color="Aqua" />
                </TextBlock.Effect>
            </TextBlock>

        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button
                Width="10"
                Click="Button011_OnClick"
                Content="start animation" />
        </StackPanel>


        <StackPanel Grid.Row="0" Grid.Column="2">
            <Button
                x:Name="Btn0201"
                Width="60"
                Click="Btn0201_Click"
                Content="Animation Btn 01" />

            <Button Click="Btn0202_Click" Content="Get Btn01 Width Info" />

            <Button
                Width="150"
                Click="Btn0203_Click"
                Content="Begin animation later 10s" />

            <Button
                Width="150"
                Height="20"
                Content="Animation from XMAL">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Height"
                                        To="40"
                                        Duration="0:0:2" />

                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Width"
                                        To="200"
                                        Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3">

            <Grid>
                <Image
                    x:Name="Bg"
                    Width="180"
                    Source="BG.png" />
                <Image Width="180" Source="On.png" />
            </Grid>

            <StackPanel
                Margin="0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnStartPlay"
                    Width="60"
                    Margin="5,0"
                    Content="Start" />
                <Button
                    x:Name="BtnPausePlay"
                    Width="60"
                    Margin="5,0"
                    Content="Pause" />
                <Button
                    x:Name="ReStartPlay"
                    Width="60"
                    Margin="5,0"
                    Content="ReStart" />
                <Button
                    x:Name="BtnStopPlay"
                    Width="60"
                    Margin="5,0"
                    Content="Stop" />
                <Button
                    x:Name="BtnCenterPlay"
                    Width="90"
                    Margin="5,0"
                    Content="CenterPlay" />
            </StackPanel>
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label
                    x:Name="LabPlayInfo"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Content="0:0:0" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Play Speed" />
                <Slider
                    x:Name="SpeedSlider"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    Maximum="3"
                    Minimum="0.1"
                    ValueChanged="SpeedSlider_OnValueChanged"
                    Value="1" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Height="30"
                    Maximum="1"
                    Minimum="0" />
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3">
            <Button
                Width="120"
                Height="20"
                Content="Btn1301">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    To="150"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <ElasticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="30"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <ElasticEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    To="120"
                                    Duration="0:0:1" />
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="20"
                                    Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="3">
            <Button Style="{StaticResource AnimationBtn}" />
            <Ellipse
                Width="50"
                Height="50"
                Stretch="Fill">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.7 0.3" RadiusX="1" RadiusY="1">
                        <GradientStop Offset="0" Color="Wheat" />
                        <GradientStop Offset="1" Color="Blue" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Window.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <PointAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="Fill.GradientOrigin"
                                    From="0.7 0.3"
                                    To="0.3 0.7"
                                    Duration="0:0:5" />
                                <ColorAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty=" Fill.GradientStops[1].Color"
                                    To="Black"
                                    Duration="0:0:4" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <Rectangle Width="100" Height="100">
                <Rectangle.Fill>
                    <VisualBrush Visual="{Binding ElementName=Bg}" />
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <SkewTransform CenterX="0.5" />
                </Rectangle.RenderTransform>
            </Rectangle>

        </StackPanel>
    </Grid>
</Window>
