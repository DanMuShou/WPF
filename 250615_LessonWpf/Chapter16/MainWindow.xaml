<Window
    x:Class="Chapter16.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter16"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <MediaElement />
            <Button Content="Play with but trigger">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard TargetName="VideoMedia">
                                <MediaTimeline Source="/burn-tool.mp4" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Play with code" />
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Grid.ColumnSpan="3">
            <Border
                Margin="4"
                BorderBrush="Black"
                BorderThickness="3">
                <MediaElement
                    x:Name="Media"
                    Height="300"
                    LoadedBehavior="Manual"
                    MouseLeftButtonUp="Media_OnMouseLeftButtonUp"
                    Volume="{Binding ElementName=SlVolume, Path=Value}" />

            </Border>
            <StackPanel
                Margin="0,16"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnOpen"
                    Width="80"
                    Margin="8,0"
                    Click="BtnOpen_OnClick"
                    Content="Open" />
                <Button
                    x:Name="BtnBack"
                    Width="80"
                    Margin="8,0"
                    Content="Back" />
                <Button
                    x:Name="BtnPause"
                    Width="80"
                    Margin="8,0"
                    Click="BtnPause_OnClick"
                    Content="Pause" />
                <Button
                    x:Name="BtnFastPlay"
                    Width="80"
                    Margin="8,0"
                    Click="BtnFastPlay_OnClick"
                    Content="FastPlay" />
                <Slider
                    x:Name="SlVolume"
                    Width="100"
                    Margin="8,0"
                    Maximum="1"
                    Minimum="0"
                    Value="0.5" />
            </StackPanel>
            <ProgressBar
                x:Name="ProBarMedia"
                Height="8"
                Maximum="1"
                Minimum="0" />
        </StackPanel>
    </Grid>
</Window>
