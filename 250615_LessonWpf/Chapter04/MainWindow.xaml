<Window
    x:Class="Chapter04.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter04"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    FontFamily="Maple Mono NF CN Medium"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <GroupBox>
                <GroupBox.Header>
                    <Image Source="Image/精灵-0001.png" />
                </GroupBox.Header>
                <StackPanel>
                    <Button Content="Btn0001" />
                    <Label Content="Label0001" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Horizontal">
            <!--  选项卡空间  -->
            <TabControl SelectionChanged="Tab01SelectionChange">
                <TabItem Header="Tab0101">
                    <Button />
                </TabItem>
                <TabItem Header="Tab0102">
                    <Label Content="FFF" />
                </TabItem>
                <TabItem Header="Tab0103">
                    <Image Source="Image/精灵-0001.png" />
                </TabItem>
                <TabItem Header="Tab0104" />
            </TabControl>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2">
            <Expander Header="这么折都有面" IsExpanded="True">
                <StackPanel>
                    <TextBlock Text="X几几" />
                    <TextBlock Text="X几几" />
                    <TextBlock Text="X几几" />
                    <TextBlock Text="X几几" />
                    <Image Source="Image/精灵-0001.png" />
                </StackPanel>
            </Expander>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="3">
            <!--  Wrap放不下不会超  -->
            <TextBlock
                HorizontalAlignment="Center"
                Text="TB0301"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="TextBox0301"
                HorizontalAlignment="Center"
                AcceptsReturn="True"
                IsEnabled="True"
                MaxLength="10"
                MaxLines="3"
                MinLines="2"
                Text="TB03021111111111111 3021111111111 3021111111111 3021111111111 3021111111111 3021111111111  "
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <Button Click="Btn0301OnClick" Content="获得所选文字" />
            <Label x:Name="Label0301" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label x:Name="Label1001" Content="Test" />
            <TextBox
                x:Name="TextBox1001"
                SelectionChanged="TextBox1001OnSelectionChanged"
                Text="1234567890" />
            <Button Click="Btn1001OnClick" Content="SelectAll" />
            <PasswordBox
                x:Name="PasswordBox1001"
                Password="1111111"
                PasswordChar="-" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <!--  ListBox只能显示一个 ListView能显示多个  -->
            <!--  SelectionMode选择模式 单选多选 Extended ctrl多选 shift连选  -->
            <ListBox SelectionChanged="ListBox1101SelectChange" SelectionMode="Extended">
                <ListBoxItem Content="China" />
                <ListBoxItem Content="Korea" IsSelected="True" />
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="fff" />
                        <Button Content="test" />
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
            <ListView>
                <ListViewItem Content="China" />
                <ListViewItem Content="Japan" />
                <ListViewItem Content="Korea" />
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <!--  动态绑定数据  -->
            <ListBox
                x:Name="ListBox1101"
                DisplayMemberPath="Name"
                SelectedValuePath="Id"
                SelectionChanged="ListBox1201SelectChange" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3">
            <ComboBox
                x:Name="ComboBox1301"
                DisplayMemberPath="Name"
                SelectedValue="Id"
                SelectionChanged="ComboBox1301OnSelectionChange" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Orientation="Horizontal">
            <Image Opacity="{Binding ElementName=Slider2001, Path=Value}" Source="Image/精灵-0001.png" />
            <Slider
                x:Name="Slider2001"
                IsSelectionRangeEnabled="True"
                Maximum="1"
                Minimum="0"
                Orientation="Vertical"
                SelectionEnd="0.9"
                SelectionStart="0.1"
                Value="0.5" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <ProgressBar x:Name="ProgressBar2101" Height="5" />
            <Label x:Name="Label2101" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2">
            <Calendar
                x:Name="Calendar2201"
                Height="100"
                DisplayDateEnd="2026/01/01"
                DisplayDateStart="2024/01/01"
                DisplayMode="Decade"
                FirstDayOfWeek="Monday"
                IsTodayHighlighted="False"
                SelectionMode="SingleRange" />
            <DatePicker
                x:Name="DatePicker2201"
                IsDropDownOpen="False"
                SelectedDate="2022/01/01"
                SelectedDateFormat="Long" />
            <Button
                x:Name="Btn2201"
                Click="Btn2201OnClick"
                Content="1" />
            <TextBlock
                x:Name="TextBlock2201"
                Text="1"
                TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</Window>
