<Window
    x:Class="Chapter15.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chapter15"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <local:PriceConvert
            x:Key="PriceConvertRes"
            HighBrush="DarkSalmon"
            LowBrush="CadetBlue"
            MinPrice="5000" />
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Padding="36"
            BorderBrush="Black"
            BorderThickness="3"
            CornerRadius="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="7*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView
                        Grid.Row="0"
                        Margin="0,0,0,16"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding}"
                        SelectionChanged="Selector_OnSelectionChanged">
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                    </ListView>
                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Price :" />
                            <TextBox x:Name="TbFilterPriceNumber" Grid.Column="1" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                x:Name="BtnFilterProduct"
                                Grid.Column="0"
                                Margin="4,0"
                                Click="BtnFilterProduct_OnClick"
                                Content="PriceFilter" />
                            <Button
                                x:Name="BtnRemoveFilter"
                                Grid.Column="1"
                                Margin="4,0"
                                Click="BtnRemoveFilter_OnClick"
                                Content="Remove PriceFilter" />
                        </Grid>
                    </StackPanel>

                </Grid>

                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch" />

                <ScrollViewer Grid.Column="2">
                    <StackPanel Margin="0,0,0,16">
                        <ComboBox
                            x:Name="CbProducts"
                            Margin="0,0,0,16"
                            DisplayMemberPath="Name"
                            IsSynchronizedWithCurrentItem="True"
                            ItemsSource="{Binding}"
                            SelectedIndex="0"
                            SelectionChanged="CbProducts_OnSelectionChanged"
                            Text="{Binding Name}" />

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Product Name :" />
                            <TextBox
                                Grid.Column="1"
                                Margin="16,0,0,0"
                                Text="{Binding Name}" />
                        </Grid>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Product Description :" />
                            <TextBox
                                Grid.Column="1"
                                Margin="16,0,0,0"
                                Text="{Binding Description}" />
                        </Grid>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="Product Price :" />
                            <TextBox
                                Grid.Column="1"
                                Margin="16,0,0,0"
                                Text="{Binding Price}" />
                        </Grid>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="BtnMoveLeftItem"
                                Width="60"
                                Margin="0,0,16,0"
                                Click="BtnMoveLeftItem_OnClick"
                                Content="Left" />
                            <TextBlock
                                x:Name="TbPagePosition"
                                Margin="0,0,16,0"
                                Text="0 / 1" />
                            <Button
                                x:Name="BtnMoveRightItem"
                                Width="60"
                                Click="BtnMoveRightItem_OnClick                         "
                                Content="Right" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <ListView
            Grid.Row="2"
            Grid.Column="0"
            Padding="4"
            ItemsSource="{Binding}">
            <ListView.ItemContainerStyle>
                <Style>
                    <Setter Property="ListViewItem.Background" Value="{Binding Price, Converter={StaticResource PriceConvertRes}}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding Price}" Header="Price" />
                        <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Description" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
