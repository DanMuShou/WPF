<Window
    x:Class="ProductionMonitoringPlatform.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductionMonitoringPlatform"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mcol="clr-namespace:ProductionMonitoringPlatform.Controls"
    Title="生产监控平台"
    Width="1200"
    Height="750"
    FontFamily="{StaticResource MapleMono}"
    Foreground="White"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  禁用Windows Aero玻璃效果，使窗口呈现传统的非透明边框样式  -->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <VisualBrush
            x:Key="WaveVisual"
            TileMode="Tile"
            Viewport="0,0,15,15"
            ViewportUnits="Absolute">
            <VisualBrush.Visual>
                <Path
                    Data="M 0,0 L 20,20 M 20,0 L 0,20"
                    Stroke="LightSlateGray"
                    StrokeThickness="1" />
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Offset="0" Color="#4e4e4e" />
                <GradientStop Offset="0.5" Color="#2e2e2e" />
                <GradientStop Offset="1" Color="#1e1e1e" />
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="675" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <!--  标头  -->
        <Border
            Grid.Row="0"
            BorderBrush="LightSlateGray"
            BorderThickness="0,0,0,1">
            <Grid Margin="8,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Margin="0,8,16,8"
                    Source="Resources/Images/Logo.png" />
                <StackPanel Grid.Column="1" Margin="0,8,0,0">
                    <TextBlock FontSize="16" Text="生产监控平台" />
                    <TextBlock Text="这是副标题" />
                </StackPanel>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Orientation="Horizontal"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Click="BtnMinimize_OnClick" Style="{StaticResource BtnOperate}">
                            <Image Margin="8" Source="Resources/Images/ic_screenshot_line.png" />
                        </Button>
                        <Button Click="BtnMaximize_OnCLick" Style="{StaticResource BtnOperate}">
                            <Image Margin="8" Source="Resources/Images/ic_screenshot_rectangle.png" />
                        </Button>
                        <Button
                            Background="DarkRed"
                            Click="BtnCloseWindows_OnClick"
                            Style="{StaticResource BtnOperate}">
                            <Image Margin="8" Source="Resources/Images/ic_public_cancel_filled.png" />
                        </Button>
                    </StackPanel>
                    <Border
                        Grid.Row="1"
                        Background="{StaticResource WaveVisual}"
                        BorderBrush="LightSlateGray"
                        BorderThickness="0,1,0,0" />
                </Grid>
            </Grid>
        </Border>

        <!--  内容  -->
        <Grid Grid.Row="1" Margin="36,16">
            <mcol:MonitorUc />
            <!-- <mcol:MonitorUc Content="{Binding MonitorUc}" /> -->
        </Grid>

        <!--  底部  -->
        <Border
            Grid.Row="2"
            BorderBrush="LightSlateGray"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    Background="{StaticResource WaveVisual}"
                    BorderBrush="LightSlateGray"
                    BorderThickness="0,0,1,0" />
                <TextBlock
                    Grid.Column="1"
                    Margin="8,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="This is a demo project." />
            </Grid>
        </Border>
    </Grid>
</Window>
