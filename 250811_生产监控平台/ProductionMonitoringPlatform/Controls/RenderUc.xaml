<UserControl
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d"
  x:Class="ProductionMonitoringPlatform.Controls.RenderUc"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ProductionMonitoringPlatform.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Grid x:Name="LayGrid">
    <Canvas x:Name="MainCanvas">
      <!--  外轮廓多边形  -->
      <Polygon Fill="Red" StrokeThickness="3" x:Name="P1" />
      <Polygon Fill="Green" StrokeThickness="3" x:Name="P2" />
      <Polygon Fill="Blue" StrokeThickness="3" x:Name="P3" />
      <Polygon Fill="Pink" StrokeThickness="3" x:Name="P4" />
      <!--  数据多边形  -->
      <Polygon Fill="BlueViolet" Stroke="Orange" StrokeThickness="3" x:Name="PDate" />
    </Canvas>
  </Grid>
</UserControl>
