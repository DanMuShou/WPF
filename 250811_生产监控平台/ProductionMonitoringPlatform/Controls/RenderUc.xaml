<UserControl
    x:Class="ProductionMonitoringPlatform.Controls.RenderUc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid x:Name="LayGrid">
        <Canvas x:Name="MainCanvas">
            <!--  外轮廓多边形  -->
            <Polygon
                x:Name="P1"
                Fill="Red"
                StrokeThickness="3" />
            <Polygon
                x:Name="P2"
                Fill="Green"
                StrokeThickness="3" />
            <Polygon
                x:Name="P3"
                Fill="Blue"
                StrokeThickness="3" />
            <Polygon
                x:Name="P4"
                Fill="Pink"
                StrokeThickness="3" />
            <!--  数据多边形  -->
            <Polygon
                x:Name="PDate"
                Fill="BlueViolet"
                Stroke="Orange"
                StrokeThickness="3" />
        </Canvas>
    </Grid>
</UserControl>
