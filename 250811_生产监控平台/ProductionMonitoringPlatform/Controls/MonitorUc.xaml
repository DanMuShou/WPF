<UserControl
  x:Class="ProductionMonitoringPlatform.Controls.MonitorUc"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ProductionMonitoringPlatform.Controls"
  xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:ProductionMonitoringPlatform.ViewModels"
  x:Name="MonitorUserControl"
  d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
  d:DesignHeight="1000"
  d:DesignWidth="1000"
  mc:Ignorable="d"
>
  <UserControl.Resources>
    <Style x:Key="GbStyle" TargetType="GroupBox">
      <Setter Property="Margin" Value="8,8" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="GroupBox">
            <Grid>
              <!--  边框  -->
              <Polyline
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Points="0,30 0,10 10,0 30,0 "
                Stroke="#6f6f6f"
                StrokeThickness="1"
              />
              <Ellipse
                Width="4"
                Height="4"
                Margin="24,-2,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#6f6f6f"
              />
              <Ellipse
                Width="4"
                Height="4"
                Margin="-2,24,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#6f6f6f"
              />
              <Path
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Data="M0,0 3,3 30,3 33,0 68,0 73,0 78,5 83,5 "
                Stroke="#6f6f6f"
                StrokeThickness="1"
              />
              <Path
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Data="M0,0 -10,10"
                Stroke="#6f6f6f"
                StrokeThickness="1"
              />
              <Path
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Data="M0,0 -8,8 0,8"
                Fill="#6f6f6f"
              />
              <Border
                Margin="30,-0.5,83,0"
                VerticalAlignment="Top"
                BorderBrush="#6f6f6f"
                BorderThickness="0,1,0,0"
              />
              <Border
                Margin="0,5,0,10"
                HorizontalAlignment="Right"
                BorderBrush="#6f6f6f"
                BorderThickness="0,0,1,0"
              />
              <Border
                Margin="0,0,10,0"
                VerticalAlignment="Bottom"
                BorderBrush="#6f6f6f"
                BorderThickness="0,0,0,1"
              />
              <Border
                Margin="-0.5,30,0,0"
                HorizontalAlignment="Left"
                BorderBrush="#6f6f6f"
                BorderThickness="1,0,0,0"
              />
              <!--  表头标记  -->
              <Path Margin="10,13" Data="M0,0 3,0 5,4 3,8 0,8 3,4" Fill="#6f6f6f" />
              <Path Margin="16,13" Data="M0,0 3,0 5,4 3,8 0,8 3,4" Fill="#3f3f3f" />
              <!--  显示内容  -->
              <TextBlock
                Margin="25,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontWeight="Bold"
                Text="{TemplateBinding Header}"
              />
              <ContentPresenter />
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Resources>
  <Grid Margin="16,8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <!--  日期显示  -->
      <StackPanel Grid.Column="0" Orientation="Horizontal">
        <TextBlock
          Margin="0,0,16,0"
          VerticalAlignment="Center"
          FontSize="30"
          Text="{Binding TimeStrModel.TimeStr}"
        />
        <StackPanel VerticalAlignment="Center">
          <TextBlock Text="{Binding TimeStrModel.DateStr}" />
          <TextBlock HorizontalAlignment="Right" Text="{Binding TimeStrModel.WeekStr}" />
        </StackPanel>
      </StackPanel>
      <!--  机器计数  -->
      <StackPanel
        Grid.Column="1"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Orientation="Horizontal"
      >
        <StackPanel.Resources>
          <DataTemplate x:Key="MachineCountTemplate">
            <Border Width="15" Margin="2,0" Background="#5f5f5f">
              <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="{Binding}"
              />
            </Border>
          </DataTemplate>
        </StackPanel.Resources>
        <TextBlock Margin="8,0" VerticalAlignment="Center" FontSize="10" Text="机台&#xD;总数" />
        <ItemsControl
          Margin="0,0,16,0"
          ItemTemplate="{StaticResource MachineCountTemplate}"
          ItemsSource="{Binding CapacityModel.MachineCount}"
        >
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
        <TextBlock Margin="8,0" VerticalAlignment="Center" FontSize="10" Text="生产计数" />
        <ItemsControl
          Margin="0,0,16,0"
          ItemTemplate="{StaticResource MachineCountTemplate}"
          ItemsSource="{Binding CapacityModel.ProductCount}"
        >
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
        <TextBlock Margin="8,0" VerticalAlignment="Center" FontSize="10" Text="不合格计数" />
        <ItemsControl
          Margin="0,0,16,0"
          ItemTemplate="{StaticResource MachineCountTemplate}"
          ItemsSource="{Binding CapacityModel.FailuresCount}"
        >
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
      </StackPanel>
      <Button
        Grid.Column="2"
        Width="75"
        Height="30"
        Content="配置"
        Style="{StaticResource BtnIconStyle}"
      >
        <Button.Tag>
          <Image Margin="4" Source="/Resources/Images/ic_public_view_list_filled.png" />
        </Button.Tag>
      </Button>
    </Grid>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <!--  左列表  -->
      <Grid Grid.Column="0">
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!--  环境显示 - Grid网格  -->
        <GroupBox Grid.Row="0" Header="环境" Style="{StaticResource GbStyle}">
          <ItemsControl Margin="20,35,20,5" ItemsSource="{Binding EnvironmentModelList}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Columns="4" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <StackPanel Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <TextBlock
                    Margin="0,8"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="#dfdfdf"
                    Text="{Binding EnItemValue}"
                  />
                  <TextBlock HorizontalAlignment="Center" Text="{Binding EnItemName}" />
                </StackPanel>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </GroupBox>
        <!--  产能显示 - 柱状图  -->
        <GroupBox Grid.Row="1" Header="产能" Style="{StaticResource GbStyle}">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
              Grid.Row="0"
              Margin="0,10,20,4"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Orientation="Horizontal"
            >
              <Rectangle
                Width="8"
                Height="8"
                Margin="4,0"
                VerticalAlignment="Center"
                Fill="DeepSkyBlue"
              />
              <TextBlock Margin="0,0,8,0" Text="生产计数" />
              <Rectangle
                Width="8"
                Height="8"
                Margin="4,0"
                VerticalAlignment="Center"
                Fill="IndianRed"
              />
              <TextBlock Text="不良计数" />
            </StackPanel>
            <lvc:CartesianChart Grid.Row="1" Margin="20,10,20,5">
              <!--  X轴信息  -->
              <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="8:00,9:00,10:00,11:00,12:00,13:00,14:00,15:00,16:00">
                  <lvc:Axis.Separator>
                    <lvc:Separator Step="1" StrokeThickness="0" />
                  </lvc:Axis.Separator>
                </lvc:Axis>
              </lvc:CartesianChart.AxisX>
              <!--  Y轴信息  -->
              <lvc:CartesianChart.AxisY>
                <lvc:Axis MaxValue="1000" MinValue="0">
                  <lvc:Axis.Separator>
                    <lvc:Separator Step="200" Stroke="#66ffffff" StrokeThickness="1" />
                  </lvc:Axis.Separator>
                </lvc:Axis>
              </lvc:CartesianChart.AxisY>
              <!--  Y轴数据  -->
              <lvc:CartesianChart.Series>
                <lvc:ColumnSeries
                  Title="生产计数"
                  MaxColumnWidth="10"
                  Values="300,400,500,200,600,200,700,900,1000"
                >
                  <lvc:ColumnSeries.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <GradientStop Offset="0" Color="DeepSkyBlue" />
                      <GradientStop Offset="1" Color="SteelBlue" />
                    </LinearGradientBrush>
                  </lvc:ColumnSeries.Fill>
                </lvc:ColumnSeries>
                <lvc:ColumnSeries
                  Title="不良计数"
                  MaxColumnWidth="10"
                  Values="30,40,50,20,60,20,70,90,100"
                >
                  <lvc:ColumnSeries.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <GradientStop Offset="0" Color="IndianRed" />
                      <GradientStop Offset="1" Color="Firebrick" />
                    </LinearGradientBrush>
                  </lvc:ColumnSeries.Fill>
                </lvc:ColumnSeries>
              </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
          </Grid>
        </GroupBox>
        <!--  质量显示 - 折线图  -->
        <GroupBox Grid.Row="2" Header="质量" Style="{StaticResource GbStyle}">
          <Grid>
            <lvc:CartesianChart Margin="20,35,20,5">
              <!--  X轴信息  -->
              <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="1#,2#,3#,4#,5#,6#">
                  <lvc:Axis.Separator>
                    <lvc:Separator Step="1" StrokeThickness="0" />
                  </lvc:Axis.Separator>
                </lvc:Axis>
              </lvc:CartesianChart.AxisX>
              <!--  Y轴信息  -->
              <lvc:CartesianChart.AxisY>
                <lvc:Axis MaxValue="1000" MinValue="0">
                  <lvc:Axis.Separator>
                    <lvc:Separator Step="200" Stroke="#66ffffff" StrokeThickness="1" />
                  </lvc:Axis.Separator>
                </lvc:Axis>
              </lvc:CartesianChart.AxisY>
              <!--  Y轴数据  -->
              <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="质量" Stroke="#6f6f6f" Values="300,400,500,200,600,200">
                  <lvc:LineSeries.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <GradientStop Offset="0" Color="#9f9f9f9f" />
                      <GradientStop Offset="1" Color="#0f9f9f9f" />
                    </LinearGradientBrush>
                  </lvc:LineSeries.Fill>
                </lvc:LineSeries>
              </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
          </Grid>
        </GroupBox>
      </Grid>
      <!--  中列表  -->
      <Grid Grid.Column="1">
        <Grid.RowDefinitions>
          <RowDefinition Height="150" />
          <RowDefinition Height="Auto" />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!--  监控图 - 图片/视频显示  -->
        <Image Grid.Row="0" Margin="16,8" Source="/Resources/Images/Logo.png" Stretch="Fill" />
        <!--  报警记录 - 文本显示  -->
        <Grid Grid.Row="1" Margin="16,8">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
          </Grid.RowDefinitions>
          <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image Width="16" Source="/Resources/Images/ic_questionnaire.png" />
            <TextBlock Margin="8,0" VerticalAlignment="Center" Text="报警记录" />
          </StackPanel>
          <ItemsControl Grid.Row="1" Margin="0,4" ItemsSource="{Binding AlarmModel}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Grid Height="23">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <Rectangle
                    Grid.Column="0"
                    Width="6"
                    Height="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="IndianRed"
                    RadiusX="2"
                    RadiusY="2"
                  />
                  <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#bfffffff"
                    Text="{Binding Numbering}"
                  />
                  <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="#bfffffff"
                    Text="{Binding Message}"
                  />
                  <TextBlock
                    Grid.Column="3"
                    Margin="0,0,16,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#bfffffff"
                    Text="{Binding Time}"
                  />
                  <TextBlock
                    Grid.Column="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#bfffffff"
                    Text="{Binding Duration}"
                  />
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
        <!--  监控界面 - 饼图  -->
        <GroupBox Grid.Row="2" Header="数据异常占比" Style="{StaticResource GbStyle}">
          <lvc:PieChart Margin="0,40,0,20" InnerRadius="45">
            <lvc:PieChart.Resources>
              <!--  饼图样式  -->
              <Style TargetType="lvc:PieSeries">
                <Setter Property="DataLabelsTemplate">
                  <Setter.Value>
                    <DataTemplate>
                      <StackPanel Orientation="Horizontal">
                        <TextBlock
                          Margin="0,0,5,0"
                          Foreground="White"
                          Text="{Binding Point.SeriesView.Title}"
                        />
                        <TextBlock
                          Margin="0,0,5,0"
                          Foreground="White"
                          Text="{Binding Point.SeriesView.Value[0]}"
                        />
                      </StackPanel>
                    </DataTemplate>
                  </Setter.Value>
                </Setter>
              </Style>
            </lvc:PieChart.Resources>
            <!--  饼图数据  -->
            <lvc:PieChart.Series>
              <lvc:PieSeries
                Title="压差"
                DataLabels="True"
                LabelPosition="OutsideSlice"
                StrokeThickness="0"
                Values="20"
              />
              <lvc:PieSeries
                Title="振动"
                DataLabels="True"
                LabelPosition="OutsideSlice"
                StrokeThickness="0"
                Values="40"
              />
              <lvc:PieSeries
                Title="设备温度"
                DataLabels="True"
                LabelPosition="OutsideSlice"
                StrokeThickness="0"
                Values="10"
              />
              <lvc:PieSeries
                Title="光照"
                DataLabels="True"
                LabelPosition="OutsideSlice"
                StrokeThickness="0"
                Values="30"
              />
            </lvc:PieChart.Series>
          </lvc:PieChart>
        </GroupBox>
      </Grid>
      <!--  右列表  -->
      <Grid Grid.Column="2">
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <!--  设备信息  -->
        <GroupBox Grid.Row="0" Header="设备" Style="{StaticResource GbStyle}">
          <ItemsControl Margin="20,35,20,5" ItemsSource="{Binding DeviceModelList}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Columns="4" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <StackPanel Margin="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <TextBlock
                    Margin="0,8"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="#dfdfdf"
                    Text="{Binding DeviceValue}"
                  />
                  <TextBlock HorizontalAlignment="Center" Text="{Binding DeviceName}" />
                </StackPanel>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="能耗" Style="{StaticResource GbStyle}">
          <local:RenderUc ItemSource="{Binding RenderModelList}" />
        </GroupBox>
        <GroupBox Grid.Row="2" Header="人力" Style="{StaticResource GbStyle}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,20,0,0" VerticalAlignment="Center">
              <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                Foreground="#aaffffff"
                Text="870"
              />
              <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                Foreground="#aaffffff"
                Text="在职在岗"
              />
            </StackPanel>
            <Grid Grid.Column="1">
              <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
              </Grid.RowDefinitions>
              <TextBlock
                Grid.Row="0"
                VerticalAlignment="Center"
                Foreground="#88ffffff"
                Text="缺岗统计"
              />
              <ItemsControl Grid.Row="1" ItemsSource="{Binding StuffOutWorkModelList}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Grid Width="auto" Height="20">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                      </Grid.ColumnDefinitions>
                      <Rectangle
                        Grid.Column="0"
                        Width="5"
                        Height="5"
                        Fill="Orange"
                        RadiusX="5"
                        RadiusY="5"
                      />
                      <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#eeffffff"
                        Text="{Binding StuffName}"
                      />
                      <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#eeffffff"
                        Text="{Binding Position}"
                      />
                      <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Border
                          Width="{Binding ShowWidth}"
                          Height="3"
                          Margin="5,0"
                          VerticalAlignment="Center"
                          Background="Aqua"
                        />
                        <TextBlock
                          VerticalAlignment="Center"
                          Foreground="#eeffffff"
                          Text="{Binding OutWorkCount}"
                        />
                      </StackPanel>
                    </Grid>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </Grid>
          </Grid>
        </GroupBox>
      </Grid>
    </Grid>
    <ItemsControl Grid.Row="2" Margin="10,0" ItemsSource="{Binding WorkShopLists}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Rows="1" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Border
            Margin="4,0"
            Padding="4"
            Background="#2999"
            BorderBrush="#999"
            BorderThickness="0,1,0,0"
          >
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="30*" />
                <RowDefinition />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <!--  第一行  -->
              <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{Binding WorkShopName}"
              />
              <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
              >
                <Hyperlink
                  Command="{Binding ElementName=MonitorUserControl, Path=DataContext.ShowDetailUcCommand}"
                  TextDecorations="None"
                  >[详情]</Hyperlink
                >
              </TextBlock>
              <!--  第二行  -->
              <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
              >
                <TextBlock FontSize="10" Text="机台总数" />
                <TextBlock
                  Margin="0,5"
                  HorizontalAlignment="Center"
                  FontSize="30"
                  Text="{Binding TotalCount}"
                />
              </StackPanel>
              <UniformGrid Grid.Row="1" Grid.Column="1">
                <StackPanel>
                  <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding WorkingCount}"
                  />
                  <TextBlock HorizontalAlignment="Center" FontSize="10" Text="作业" />
                </StackPanel>
                <StackPanel>
                  <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding WaitCount}"
                  />
                  <TextBlock HorizontalAlignment="Center" FontSize="10" Text="等待" />
                </StackPanel>
                <StackPanel>
                  <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding WrongCount}"
                  />
                  <TextBlock HorizontalAlignment="Center" FontSize="10" Text="故障" />
                </StackPanel>
                <StackPanel>
                  <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding StopCount}"
                  />
                  <TextBlock HorizontalAlignment="Center" FontSize="10" Text="停机" />
                </StackPanel>
              </UniformGrid>
            </Grid>
          </Border>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>
</UserControl>
